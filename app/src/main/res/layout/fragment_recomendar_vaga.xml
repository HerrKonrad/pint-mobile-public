<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recomendar_vaga_txt_titulo_janela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/str_recomendar_vaga"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recomendar_vaga_txt_titulo_janela">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/recomendar_vaga_linearLayout_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/recomendar_vaga_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/recomendar_vaga_txt_nome_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/str_nome_candidato_asterisco" />

                    <EditText
                        android:id="@+id/recomendar_vaga_edtxt_nome_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/str_nome_candidato_asterisco"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:minHeight="48dp" />

                    <TextView
                        android:id="@+id/recomendar_vaga_txt_email_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/str_email_candidato_asterisco" />

                    <EditText
                        android:id="@+id/recomendar_vaga_edtxt_email_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/str_email_candidato_asterisco"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp" />

                    <TextView
                        android:id="@+id/recomendar_vaga_txt_telefone_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/str_telefone_candidato" />

                    <EditText
                        android:id="@+id/recomendar_vaga_edtxt_telefone_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/str_telefone_candidato"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:minHeight="48dp" />

                    <TextView
                        android:id="@+id/recomendar_vaga_txt_linkedin_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/str_linkedin_candidato" />

                    <EditText
                        android:id="@+id/recomendar_vaga_edtxt_linkedin_candidato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/str_linkedin_candidato"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:minHeight="48dp" />

                    <TextView
                        android:id="@+id/recomendar_vaga_txt_endereco_ficheiro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/str_curriculo_candidato" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/recomendar_vaga_edtxt_endereco_ficheiro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="@string/str_endereco_ficheiro"
                            android:importantForAutofill="no"
                            android:inputType="textPersonName"
                            android:minHeight="48dp" />

                        <ImageButton
                            android:id="@+id/recomendar_vaga_imgbtn_carregar_ficheiro"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:contentDescription="@string/str_image_button"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_upload" />

                        <ImageButton
                            android:id="@+id/recomendar_vaga_imgbtn_download_ficheiro"
                            android:layout_width="150dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:contentDescription="@string/str_image_button"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_download" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/recomendar_vaga_btn_recomendar_vaga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_background_primary"
                        android:text="@string/str_recomendar_vaga"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>